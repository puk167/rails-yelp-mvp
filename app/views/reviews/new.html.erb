<h1>Review</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating, as: :radio_buttons, collection: [0,1,2,3,4,5] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
